import java.util.Scanner;

public class Jawaban3

{

public static void main(String[] args)
{
Scanner sc = new Scanner(System.in);
System.out.println("Berapa banyak baris yang anda inginkan?");
int rows = sc.nextInt();
System.out.println("pattermu ada disiniâ€¦.!!!");
for (int i = 1; i <= rows; i++)
{
for (int j = rows; j >= i; j--)
{
System.out.print(j+"");
}
System.out.println();
}
sc.close();
}

}
